@unpublished{siegel-hawleyExaminingMergerMemphis2015,
  venue = {{Chicago}},
  title = {Examining the ({{De}}){{Merger}} of the {{Memphis City}} and {{Shelby County School Systems}}},
  abstract = {On August 5, 2013, roughly 150,000 students began their first day of class in Tennessee’s recently merged Memphis City and Shelby County school system. This August, a subset of students will bypass the consolidated district and enroll in one of the six new suburban school systems created in the aftermath of the merger. This paper explores what happened in the intervening year—in addition to how the initial merger came about—as a means of understanding the role school district boundary lines play in structuring educational inequality.
District boundaries help give shape to widespread patterns of school segregation; indeed most segregation today is between districts (Clotfelter, 2004; Reardon \& Yun, 2005). Most metropolitan areas are characterized by multiple school systems that differ widely in their racial and socioeconomic makeup, as well as their students’ access to educational resources. Political boundaries separating school districts communicate crucial information to families and stakeholders about the related domains of school quality, property taxes and housing prices (Holme \& Finnigan, 2013; Rothwell, 2012; Ryan, 2010). As a result, the decision to either define school communities broadly or narrowly has extremely important implications for the distribution of equal educational opportunities.
This analysis grows out of a larger, mixed methods case study of consolidation and fragmentation in the Memphis metro. Relying on approximately 20 semi-structured qualitative interviews with education stakeholders in the area, including members of the Shelby County Transition Planning Commission and Shelby County Schools Board of Education, along with superintendents, attorneys, central office personnel, civil rights activists, local policymakers, representatives of parents’ groups, and community organizations, we examine the political process behind the city-suburban merger, subsequent decisions about student assignment and resource distribution and the motivation for the swift creation of six breakaway districts on the fringe of the metro area. All interviews are audio recorded and transcribed directly after they occur. We utilize NVivo to code our interview data and other documents collected using codes derived from the literature on school district consolidation, fragmentation, segregation, and political processes, as well as additional codes that emerge from the data. Findings are checked and re-checked utilizing member checking with participants and our research team to ensure that interpretations of data are consistent with the data and that the conclusions are authentic (Miles \& Huberman, 1994). This iterative process of data analysis allows us to engage in a reflexive process that is inductive and open-ended (Miles \& Huberman, 1994). 
Unpacking the politics surrounding the merger and fragmentation of districts in the Memphis area is critical to advancing our understanding of precisely how decisions about school-related boundary lines are made. In a time of rising inequality and rapid racial diversification, providing all students with equal educational opportunities is increasingly urgent. This study of the political process and early impact of a recent, wide-scale district consolidation, along with the subsequent fragmentation of several outlying suburban communities, will inform education policymakers and practitioners in Memphis and elsewhere.},
  type = {Conference paper},
  eventtitle = {American {{Education Research Association}}},
  date = {2015-04-19},
  author = {Siegel-Hawley, Genevieve and Diem, Sarah and Frankenberg, Erica}
}

@unpublished{frankenbergUnderstandingDiversityEquity2015,
  venue = {{Chicago}},
  title = {Understanding the {{Diversity}} and {{Equity}} of a {{New Generation}} of {{Controlled School Choice Policies}}},
  abstract = {Rationale: Student assignment policies (SAPs) in K-12 schools can either reproduce or help ameliorate existing inequality. Some districts are trying to maintain voluntarily-adopted integration policies despite the Supreme Court’s most recent decision, which prohibited most race-conscious school choice policies that were the effective and popular ways of accomplishing integration. While alternative policies with minimal or no use of race are still permitted, it is unclear whether they will create diverse schools. This research examines the new generation of school choice policies post-Parents Involved to understand how they affect diversity and equity in our multiracial, yet increasingly race-neutral era. 

Research questions are:
To what extent are schools racially and economically diverse before and after the “new generation” of controlled choice policies? 
Are there differences by student characteristics in who gets their school choices under the new SAPs? How does receiving a top school choice predict who enrolls? 

I analyze the controlled choice policies of Jefferson County, Kentucky, which considers the racial and socioeconomic characteristics of students’ Census block group instead of individual characteristics in determining students’ assignment. 

Theoretical Rationale: SAPs are designed to change the composition of students in schools. SAPs that have voluntary integration have two aims: 1) to reduce racially isolated schools because these schools have fewer educational resources that matter for students’ learning (Linn \& Welner, 2007); and 2) to create diverse schools, which has long-term perpetuating outcomes for students (Pettigrew \& Tropp, 2006; Wells \& Crain, 1994). 

School choice is increasingly popular but choice-only policies tend to produce further stratification (APA Brief, 2006; Dougherty, et al., 2013; Hastings, Kane, and Staiger, 2010; Orfield, 2013), but choice policies can be designed in ways that further integration (see Author, 2013; Betts, et al., 2006). Options remain for districts to pursue voluntary integration through a “new generation” of controlled choice policies that do not use an individual’s racial identity for school assignment (Author, 2011; Reardon, Yun, \& Kurlaender, 2006). Though SES plans or geography-based plans may create more diverse schools than policies not considering either set of characteristics, they are not as successful at producing racial integration as individual race-based plans (Reardon et al., 2006; Reardon \& Rhodes, 2011; Richards, et al., 2012). 

Methods: I employ quantitative methods to analyze data from Jefferson County Public Schools (JCPS) from 2006-07 to present. I use data from the NCES Common Core of Data to calculate school-level racial segregation using several measures: concentration, exposure and information theory index. Additionally, I analyze de-identified student level data from JCPS students’ applications and subsequent enrollment. I estimate logistic regression models before and after the policy change predicting whether students were granted their first choice or not and to examine whether individual characteristics or receipt of first choice school make students likelier to enroll. 

Significance: This analysis provides useful evidence about the efficacy of new types of choice policies that aim to create diverse, equitable schools under new legal constraints. It also enhances our understanding of the evolving relationships among race, SES, and educational inequality.},
  type = {Conference paper},
  eventtitle = {American {{Education Research Association}}},
  date = {2015-04-19},
  author = {Frankenberg, Erica}
}

